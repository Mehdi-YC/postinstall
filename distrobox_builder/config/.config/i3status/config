
general {
    output_format = "i3bar"
    colors = true
    interval = 5
}

#order += "disk /"
#order += "load"
order += "tztime local"
order += "battery 0"
order += "volume master"
order += "wireless wlp4s0"

disk "/" {
	format = "💽 %avail"
	prefix_type	= custom
	low_threshold = 20
	threshold_type = percentage_avail
}
load {
    format = "🔄 %5min"
}

tztime local {
    format = "⌚ %Y-%m-%d %H:%M"
}

battery 0 {
    last_full_capacity = true
    integer_battery_capacity = true
    low_threshold = 11
    threshold_type = percentage
    hide_seconds = true
    format = "%status %percentage %remaining"
    format_down = "❓"
    status_chr = "⚡"
    status_bat = "🔋"
    status_unk = "❓"
    status_full = "🔋"
}

volume master {
    format = "🔉 %volume"
    format_muted = "🔇 Muted"
    device = "default"
    mixer = "Master"
    mixer_idx = 0
}

wireless wlp4s0 {
    format_up = "📶 %essid %quality"
    format_down = "📶 Disconnected"
}

