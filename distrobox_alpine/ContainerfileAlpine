#podman / docker build -t <name> .
FROM quay.io/toolbx-images/alpine-toolbox:edge

RUN pkg add  tree-sitter htop btop bat fzf gh just make neofetch neovim npm python3 py3-pip py3-numpy jq git curl wget cargo rustc rust-std rustfmt rust-analyzer nushell starship zellij just hyperfine mdcat -y

#LINKING DOCKER PODMAN AND FLATPAK
RUN   ln -fs /usr/bin/distrobox-host-exec /usr/local/bin/flatpak && \ 
      ln -fs /usr/bin/distrobox-host-exec /usr/local/bin/podman && \

COPY set_alpine_config.sh /usr/local/bin/set_config
RUN chmod +x /usr/local/bin/set_config

COPY .config /usr/local/config/

#RUN git clone https://github.com/NvChad/NvChad /usr/local/config/nvim --depth 1
RUN python3 -m pip install beautifulsoup4 requests fastapi scrapy
